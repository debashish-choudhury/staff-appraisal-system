            <div class="input-field col s6 md5">
                <input id="topicName" type="text" name="topicName" value="{{topicName}}" disabled class="validate" required>
                <label for="topicName">Topic Name</label>
            </div>
            
            <div class="input-field col s6 md5">
                <select name="department">
                    <option value="{{department}}" selected>{{department}}</option>
