            </div>
            
             <div class="input-field col s6 md5">
                <input id="numberofParticipants" type="number" name="numberofParticipants" value="{{numberofParticipants}}" disabled class="validate" required>
                <label for="numberofParticipants">Number Of Participants</label>
            </div>

        </div>
            <a href="/annexure-3/resourcePerson/edit/{{id}}" class="btn waves-effect waves-light red center mb-2">Edit</a>
            <a href="/users/faculty/facultyOverview" class="btn waves-effect waves-light purple center mb-2">Back to
                overview</a><br><br>
            <form method="post" action="/annexure-3/resourcePerson/delete/{{id}}?_method=DELETE">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" class="btn waves-effect waves-light center red white-text" value="Delete">
            </form>
        </div>
    </div>
    </div>
{{else}}
{{/each}}
